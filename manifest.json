{
  "manifest_version": 2,
  "name": "Fonty - Font Changer",
  "version": "1.0",
  "description": "Change the font of whitelisted websites",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "exclude_matches": ["*://example.com/*", "*://example2.com/*"]
    }
  ]
}
